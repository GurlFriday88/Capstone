
@model List<Capstone.Models.BcbsPrefix>

    <h2>BCBS Prefix List</h2>

    <table class="table">

        <tr>
            <th>Alpha Prefix</th>
            <th>Location</th>
            <th>Action</th>
        </tr>

        @foreach (var prefix in Model)
    {
        <tr>
            <td>@prefix.Prefix</td>
            <td>@prefix.Provider.Name</td>
            <td><a class= "btn btn-sm btn-primary" asp-controller="Prefix" asp-action ="Remove">Delete</a></td>
            


        </tr>
    }
    </table>

    @if (Model.Count == 0)
{
    <p>Add some prefixes</p>
}

