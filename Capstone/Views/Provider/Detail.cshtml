@model Capstone.Models.Provider
<div class="row">

    <div class="col-sm-12">
        <div class="box box-solid box-danger">
            <div class="box-header with-border bg-red-gradient">


                <h3 class="box-title">@Model.Name</h3>
                <div class="btn-group">
                   

                        <a asp-controller="Provider" asp-action="Edit" asp-route-id="@Model.ProviderID"  class="btn btn-default btn-sm bg-aqua-gradient">
                            <i class="fa fa-edit">

                            </i>

                        </a>


             


                    <form asp-controller="Provider" asp-action="Delete" asp-route-id="@Model.ProviderID">


                        <button type="submit" value="Delete" class="btn btn-default btn-sm bg-yellow" onclick="return confirm('Are you sure you want to delete @Model.Name ?');">
                            <i class="fa fa-trash">

                            </i>
                           
                        </button>
                    </form>
                    

                        

                </div>
            </div>
            <!-- /.box-header -->
            <div class="box-body">

                <dl class="col-sm-4 dl-horizontal">
                    <dt>Phone Number:</dt>
                    <dd>@Model.PhoneNumber</dd>
                    <dt>Eligibility Expiry: </dt>
                    <dd>@Model.EligibilityExpiry</dd>
                    <dt>Benefit Renewal:</dt>
                    <dd>
                        @Model.BenefitRenewal
                    </dd>

                    <dt>Plan:</dt>
                    <dd>@Model.SubscriberNumber</dd>


                </dl>



                <dl class="col-sm-4 dl-horizontal">
                    <dt>Pages to save:</dt>
                    <dd>@Model.PagesToSave</dd>
                    <dt>What to save:</dt>
                    <dd>@Model.SavedPagesDescription</dd>
                    <dt>Auth Note:</dt>
                    <dd>@Model.AuthNote</dd>

                </dl>


                @*<dl class="col-sm-4 dl-horizontal">
                    <dt>Associated Prefixes:</dt>
                    @foreach(Prefix prefix in Model.Prefixes) { 

                        <dd>@prefix.Name</dd>
                    }
                    
                   


                </dl>*@


                <!-- /.box-body -->

            </div>

        </div>
    </div>

</div>

<div class="row">

    <div class="col-sm-4">
        <div class="box box-solid box-primary">
            <div class="box-header with-border bg-blue-gradient">


                <h3 class="box-title">Eligibility</h3>
            </div>
            <!-- /.box-header -->
            <div class="box-body">
                <dl class=" dl-horizontal ">
                    <p>
                        <b>Adult Plans:</b>
                    </p>
                    <dt>Exam:</dt>
                    <dd> 12 months</dd>
                    <dt>Frames:</dt>
                    <dd> 24 months</dd>
                    <dt>Lenses:</dt>
                    <dd> 12 months</dd>
                    <dt>Contacts:</dt>
                    <dd> 12 months</dd>
                </dl>



                <dl class=" dl-horizontal">
                    <p>
                        <b>Child Plans:</b>
                    </p>
                    <dt>Exam:</dt>
                    <dd> 12 months</dd>
                    <dt>Frames:</dt>
                    <dd> 12 months</dd>
                    <dt>Lenses:</dt>
                    <dd> 12 months</dd>
                    <dt>Contacts:</dt>
                    <dd>Never</dd>

                </dl>

                <!-- /.box-body -->

            </div>

        </div>


    </div>
    <div class="col-sm-8">

        <div class="box box-solid box-primary">
            <div class="box-header with-border  bg-blue-gradient">

                <h3 class="box-title">Miscellaneous Notes</h3>
                <div class="box-tools pull-right">
                    <!-- Buttons, labels, and many other things can be placed here! -->
                    <!-- Here is a label for example -->

                </div>
                <!-- /.box-tools -->
            </div>
            <!-- /.box-header -->
            <div class="box-body">
                
                <p>@Model.MiscNotes</p>
               
            </div>
            <!-- /.box-body -->

        </div>
        <!-- /.box -->
    </div>
</div>


